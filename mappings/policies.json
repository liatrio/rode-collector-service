{
  "version": "v1alpha2",
  "settings": {
    "analysis": {
      "normalizer": {
        "lowercase_normalizer": {
          "type": "custom",
          "char_filter": [],
          "filter": ["lowercase", "asciifolding"]
        }
      }
    }
  },
  "mappings": {
    "_meta": {
      "type": "rode"
    },
    "properties": {
      "created": {
        "type": "date"
      },
      "policy": {
        "properties": {
          "name": {
            "type": "keyword",
            "normalizer": "lowercase_normalizer"
          }
        }
      }
    },
    "dynamic_templates": [
      {
        "strings_as_keywords": {
          "match_mapping_type": "string",
          "mapping": {
            "type": "keyword",
            "norms": false
          }
        }
      }
    ]
  }
}
